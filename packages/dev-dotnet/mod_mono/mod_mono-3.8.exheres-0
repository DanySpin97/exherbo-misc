SUMMARY="Apache module for ASP.NET under Mono"
DESCRIPTION="
Mod_Mono is an Apache 2.0/2.2 module that provides ASP.NET support for the web's favorite server,
Apache.
"
HOMEPAGE="http://www.mono-project.com/docs/web/${PN}"
DOWNLOADS="http://download.mono-project.com/sources/${PN}/${PNV}.tar.gz"

LICENCES="Apache-2.0"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS="debug"

DEPENDENCIES="
    build:
        virtual/pkg-config
    build+run:
        dev-dotnet/xsp
        dev-lang/mono
        www-servers/apache[>=2.4]
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( 'debug' )

src_install() {
    default

    dodir /etc/apache2/modules.d
    mv "${IMAGE}"/etc/apache2/{"${PN}".conf,modules.d}
}

