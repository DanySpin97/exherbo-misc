require distutils [ python_dep="[>=2.5]" python_sup="2.7 2.6" ]

SUMMARY="papyon - Python MSN client library"
DESCRIPTION="
papyon is an MSN library purely written in Python. It is the library behind the Telepathy MSN
connection manager, telepathy-butterfly. papyon is a fork of the unmaintained pymsn MSN library. The
GLib mainloop is used to process the network events in an asynchronous manner.
"
HOMEPAGE="http://www.freedesktop.org/wiki/Software/${PN}"
DOWNLOADS="http://www.freedesktop.org/software/${PN}/releases/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        dev-python/gst-python:0.10
        dev-python/pycrypto
        dev-python/pyopenssl[>=0.6]
        gnome-bindings/pygobject:2[>=2.10]
        net-im/farsight2[python(-)]
"

